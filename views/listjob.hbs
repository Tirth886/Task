

<table border="1" cellpadding="0" cellspacing="0">
    <tr>
        <th>TITLE</th>
        <th>DESCRIPTION</th>
        <th>STATUS</th>
        <th>ACTION</th>
    </tr>
    {{# if status}}
    



 {{#ifEquals role "recruiter"}}
    {{#each result}}
    <tr>
        <td>{{this.job_title}}</td>
        <td>{{this.job_description}}</td>
        <td>{{this.status}}</td>
        <td>
            <a href="update?id={{this.id}}">EDIT</a>
            <br>
        </td>
    </tr>
    {{/each}}
 {{ else }}
 {{#each result}}
  {{#ifEquals this.status "open"}}
    <tr>
        <td>{{this.job_title}}</td>
        <td>{{this.job_description}}</td>
       
        <td>{{ this.status }}</td>
        <td>
            <a href="apply?id={{this.id}}">apply</a>
            <br>
        </td>
    </tr>
    {{/ifEquals}}
    {{/each}}
 {{/ifEquals}}

    {{else}}
    <tr>
        <td colspan="6">
            <center><b>{{nodata}}</b></center>
        </td>
    </tr>
    {{/if}}
</table>